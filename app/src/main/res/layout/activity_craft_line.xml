<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hewaiming.ALWorkInfo.ui.ParamsActivity" >

    <include
        android:layout_width="match_parent"
        android:layout_height="40dp"
        layout="@layout/include_back" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        layout="@layout/include_select_all" />    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@color/base_bg_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/base_bg_white"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbox_SetV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="设定电压" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_WorkV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="工作电压" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_AvgV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="平均电压" >
            </CheckBox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/base_bg_white"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbox_Noise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="噪声" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_DYBTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="电压摆时间" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_ALF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="氟化铝料量" >
            </CheckBox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/base_bg_white"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbox_AeCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="效应次数" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_ALO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="氧化铝料量" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_ALzs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="出铝指示量" >
            </CheckBox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/base_bg_white"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbox_ALCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="实际出铝量" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_FeCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="铁含量" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_SiCnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="硅含量" >
            </CheckBox>
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/base_bg_white"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbox_FZB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="分子比" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_DJWD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="电解温度" >
            </CheckBox>

            <CheckBox
                android:id="@+id/chkbox_LSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="铝水平" >
            </CheckBox>
        </LinearLayout>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/base_bg_white"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkbox_DJZSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="电解质水平" >
            </CheckBox>

           <CheckBox
                android:id="@+id/chkbox_ALL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               
                android:text="全选" >
            </CheckBox>
 <!-- 
            <CheckBox
                android:id="@+id/chkbox_LSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="铝水平" >
            </CheckBox> -->
        </LinearLayout>
    </LinearLayout>
 
</LinearLayout>