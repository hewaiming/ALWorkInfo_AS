<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hewaiming.ALWorkInfo.ui.ParamsActivity" >

    <include
        android:layout_width="match_parent"
        android:layout_height="36dp"
        layout="@layout/include_back_red" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        layout="@layout/include_select_all_red" />
    <!-- 各区效应次数饼图 -->

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/AreaAeCnt_chart"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:visibility="gone" />   

    <include
        android:id="@+id/AeMost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        layout="@layout/include_ae_most"
        android:visibility="gone" />

</LinearLayout>