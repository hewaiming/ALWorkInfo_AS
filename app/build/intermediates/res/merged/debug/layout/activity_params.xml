<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hewaiming.ALWorkInfo.ui.ParamsActivity" >

    <include
        android:layout_width="match_parent"
        android:layout_height="40dp"
        layout="@layout/include_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="6dp"
        android:background="@color/base_bg_white"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinner_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:prompt="@string/area"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/btn_params"
            style="@style/Smile.TextView._White"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_login_selector"
            android:text="确定"
            android:textSize="12sp"
            android:visibility="gone" >
        </Button>
    </LinearLayout>

    <include
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        layout="@layout/item_params_head" />

    <ListView
        android:id="@+id/lv_params"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@color/base_bg_white"
        android:scrollbars="horizontal" >
    </ListView>

</LinearLayout>