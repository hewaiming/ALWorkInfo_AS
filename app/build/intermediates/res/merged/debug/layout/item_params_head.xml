<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_PotNo_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
         android:layout_gravity="center_vertical"
        android:text="槽号"
        android:textColor="@color/text_black"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_PotNo"
        android:layout_width="@dimen/sort_image_width"
        android:layout_height="@dimen/sort_image_hight"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sort" />

    <TextView
        android:id="@+id/tv_SetV_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
         android:layout_gravity="center_vertical"
        android:text="设定电压"
        android:textColor="@color/text_black"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_SetV"
        android:layout_width="@dimen/sort_image_width"
        android:layout_height="@dimen/sort_image_hight"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sort" />

    <TextView
        android:id="@+id/tv_NbTime_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:text="NB间隔"
        android:textColor="@color/text_black"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_NbTime"
        android:layout_width="@dimen/sort_image_width"
        android:layout_height="@dimen/sort_image_hight"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sort" />

    <TextView
        android:id="@+id/tv_AeTime_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:text="AE间隔"
        android:textColor="@color/text_black"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_AeTime"
        android:layout_width="@dimen/sort_image_width"
        android:layout_height="@dimen/sort_image_hight"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sort" />

    <TextView
        android:id="@+id/tv_ALF_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="氟化铝下料量"
        android:textColor="@color/text_black"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_ALF"
        android:layout_width="@dimen/sort_image_width"
        android:layout_height="@dimen/sort_image_hight"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sort" />

</LinearLayout>